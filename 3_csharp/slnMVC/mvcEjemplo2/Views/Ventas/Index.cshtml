        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cod_venta }) |
            @Html.ActionLink("Details", "Details", new { id=item.cod_venta }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.cod_venta })
        </td>
    </tr>
}

</table>
