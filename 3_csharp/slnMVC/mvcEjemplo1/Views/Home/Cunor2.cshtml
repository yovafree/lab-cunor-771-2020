
@{
    ViewBag.Title = "Cunor2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cunor2</h2>

<form action="/Home/Cunor2" method="post">
    <br />
    <input type="text" class="form-control" name="num" placeholder="Ingrese un valor" required />
    <br />
    <input type="text" class="form-control" name="num2" placeholder="Ingrese un valor" required />
    <br />
    <input type="text" class="form-control" name="num3" placeholder="Ingrese un valor" required />
    <br />
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@if (ViewBag.num != null)
{
    int num = ViewBag.num;

    <table class="table table-bordered table-hover">

        @for (int x = 1; x <= 10; x++)
        {
            <tr>
                <td>@num</td>
                <td>*</td>
                <td>@x</td>
                <td>=</td>
                <td>@(num * x)</td>
            </tr>
        }
    </table>
}