<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background: #e8e8e8 !important;
        }

        .blog-articulo {
            margin-top: 35px;
            background: #fff;
            padding: 5px 25px 10px 25px;
        }

        .comentario {
            background: #e8e8e8;
            padding: 5px 25px 5px 25px;
            border-radius: 5px 5px 5px 5px;
            -moz-border-radius: 5px 5px 5px 5px;
            -webkit-border-radius: 5px 5px 5px 5px;
            border: 0px solid #000000;
            margin-top: 15px;
        }

        .form-comentario {
            background: #e8e8e8;
            padding: 25px 25px 25px 25px;
            border-radius: 5px 5px 5px 5px;
            -moz-border-radius: 5px 5px 5px 5px;
            -webkit-border-radius: 5px 5px 5px 5px;
            border: 0px solid #000000;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Artículos", "Index", "Articulos")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <div class="row">
            <div class="col-md-9">
                @RenderBody()
            </div>
            <div class="col-md-3">
                <h3 style="text-align:center">
                    Blog de IPC2<br />
                    Centro Universitario del Norte <br />
                    -CUNOR-
                </h3>
                <img src="https://via.placeholder.com/250x468?text=Visit+Blogging.com+Now" />
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CUNOR</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.ckeditor.com/ckeditor5/23.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#contenido'))
            .catch(error => {
                console.error(error);
            });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
